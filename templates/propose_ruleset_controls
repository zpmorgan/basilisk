
 <script language="javascript" type="text/javascript">
   function changeBoardSettings (form){
      var type = form.topology.value;
      //alert (type);
      document.getElementById('h setting').style.display = "none";
      document.getElementById('w setting').style.display = "none";
      document.getElementById('poly setting').style.display = "none";
      switch (type) {
       case 'poly':
         document.getElementById('poly setting').style.display = "";
         break;
       default: //grid
         document.getElementById('h setting').style.display = "";
         document.getElementById('w setting').style.display = "";
         break;
      }
   }
 </script>

<table>
  <tr>
   <td align="right">Topology:</td>
   <td align="left">
     <SELECT name="topology" size="1" onChange="changeBoardSettings(this.form)">
